{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "outDir": "temp",
    "sourceMap": true,
    "baseUrl": "./node_modules",
    "paths": {
      "angular-instantsearch": ["../src/index"]
    }
  },
  "include": [
    "src/**/*.ts",
    "examples/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "src/__mocks__/**/*"
  ],
  "compileOnSave": false
}
